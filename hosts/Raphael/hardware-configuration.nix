  };

  swapDevices = [
    {device = "/dev/disk/by-uuid/2d3e053b-0243-423e-86b6-9beb1556ef38";}
  ];

  zramSwap = {
    enable = true;
    priority = 100;
  };
  boot.kernel.sysctl = {
    "vm.swappiness" = 200;
    "vm.watermark_boost_factor" = 0;
    "vm.watermark_scale_factor" = 125;
