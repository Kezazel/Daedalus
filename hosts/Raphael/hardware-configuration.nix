    initrd.availableKernelModules = ["xhci_pci" "ahci" "usb_storage" "sd_mod"];
    initrd.kernelModules = [];
    kernelModules = ["kvm-intel"];
    extraModulePackages = [];
    kernelParams = [
      "i915.enable_guc=2"
    ];
  };

  fileSystems."/" = {
    device = "/dev/disk/by-uuid/0f3987ef-2f34-4c5c-92c0-5e32073e8120";
    fsType = "ext4";
  };

  fileSystems."/boot" = {
    device = "/dev/disk/by-uuid/5E9A-AC27";
